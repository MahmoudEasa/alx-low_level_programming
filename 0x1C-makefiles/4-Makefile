CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) *~ .*~ #*#

oclean:
	$(RM) $(OBJ)


fclean:
	$(RM) $(OBJ) $(NAME) *~ .*~ #*#

re:
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

.PHONY: clean oclean fclean re

